html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(name="description", content="Softwarelab Admin Site")
        title Softwarelab Userlogin
        link(rel="stylesheet", href="css/bootstrap.min.css")
        link(rel="stylesheet", href="css/login.css")
    body
        div(class='container')
            form(class="form-signin", action="/dashboard")
                h2(class="form-signin-heading") Pleas sign in
                label(for="inputEmail", class="sr-only") E-Mail
                input(type="email", id="inputEmail", class="form-control", placeholder="E-Mail", reqire, autofocus)
                label(for="inputPassword", class="sr-only") Password
                input(type="password", id="inputPassword", class="form-control", placeholder="Password", reqire)
                div(class="checkbox")
                    label: input(type="checkbox", value="remember-me")
                button(type="submit", class="btn btn-lg btn-primary btn-block") Sign in

    script(src="js/bootstrap.min.js")