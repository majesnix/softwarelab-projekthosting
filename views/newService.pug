extends global/master

block content
    h1 Create new service
    .form-group
        select.selectedServiceType.form-control
            option NodeJS
            option Database
    .form-group.nodeJS-sel
        label.control-label(for='sel_nodejs_name') Please enter the name of the NodeJS-Server
        textarea.form-control(cols='40' id='sel_nodejs_name' name='name' rows='1')
        label.control-label(for='sel_nodejs_port') Please enter the wanted port
        textarea.form-control(cols='40' id='sel_nodejs_port' name='name' rows='1')
    .form-group.database-sel(style="display:none;")
        label.control-label(for='sel_database_name') Please enter the name of the Database
        textarea.form-control(cols='40' id='sel_database_name' name='name' rows='1')
        label.control-label(for='sel_database_root') Please enter username and password for the root-user
        textarea.form-control(cols='40' id='sel_database_root' name='name' rows='1')
        textarea.form-control(cols='40' id='sel_database_root_pw' name='name' rows='1')
    .form-group
        button.btn(name='submit' type='submit') Create